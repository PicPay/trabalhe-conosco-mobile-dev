<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">

        <item name="colorAccent">@color/hint_default</item>
        <item name="android:textColorHint">@color/hint_default</item>
        <item name="colorControlNormal">@color/hint_default</item>
        <item name="colorControlActivated">@color/button_color</item>
        <item name="colorControlHighlight">@color/hint_default</item>


    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/hint_default</item>
        <item name="android:textColorHint">@color/hint_default</item>
        <item name="colorControlNormal">@color/hint_default</item>
        <item name="colorControlActivated">@color/button_color</item>
        <item name="colorControlHighlight">@color/hint_default</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
