<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/clrGreen_21C15D"
    tools:context="br.com.everaldocardosodearaujo.picpay.Activity.SplashActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/ic_logo_splash"
        android:layout_gravity="center"
        android:backgroundTint="@color/clrWhite_FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_slogan"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_dev"
        android:textColor="@color/clrWhite_FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"/>

</LinearLayout>
