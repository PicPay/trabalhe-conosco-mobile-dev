<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="test.edney.picpay.model.UserModel"/>
        <variable
            name="ui"
            type="test.edney.picpay.view.payment.PaymentUI"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        style="@style/LayoutStyle">

        <ImageButton
            app:srcCompat="@drawable/ic_back"
            android:contentDescription="@null"
            android:onClick="@{()-> ui.actionBack()}"
            style="@style/BackButton"/>

        <RelativeLayout style="@style/InternalLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="@null"
                    android:layout_gravity="center"
                    imageUrl="@{user.img}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:text="@{user.username}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#64FFFFFF"
                        android:text="R$"/>

                    <EditText
                        android:id="@+id/tv_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textSize="46sp"
                        android:textColor="#64FFFFFF"
                        android:text="34.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/tv_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:text="Mastercard 1234 *"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:text=" EDITAR"
                        android:onClick="@{()-> ui.actionEditCard()}"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Pagar"
                android:layout_alignParentBottom="true"
                android:onClick="@{()-> ui.actionPay()}"
                style="@style/ActionButton"/>

        </RelativeLayout>

    </LinearLayout>

</layout>