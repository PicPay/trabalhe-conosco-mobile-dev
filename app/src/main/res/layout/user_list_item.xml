<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_contacts_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cl_contact_margin"
    android:layout_marginRight="@dimen/cl_contact_margin"
    android:layout_marginTop="@dimen/cl_contact_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageView
        android:id="@+id/iv_contacts_list_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:contentDescription="@string/iv_contact_content_description"/>

    <TextView
        android:id="@+id/tv_contacts_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_contact_name"
        app:layout_constraintTop_toTopOf="@+id/iv_contacts_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/iv_contacts_list_item"
        app:layout_constraintLeft_toRightOf="@+id/iv_contacts_list_item"
        android:padding="15dp" />

    <LinearLayout
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/cl_contact_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_contacts_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>