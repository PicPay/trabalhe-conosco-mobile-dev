<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_xx_small"
    android:paddingLeft="@dimen/space_normal"
    android:paddingBottom="@dimen/space_xx_small">

    <ImageView
        android:id="@+id/iuser_img_img"
        style="@style/PicPay.Text.User_Img_Small"
        tools:src="@mipmap/ic_launcher_round"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/iuser_txt_username"
            style="@style/PicPay.Text.User_Username"
            tools:text="\@Wiliam.Trancoso"/>

        <TextView
            android:id="@+id/iuser_txt_name"
            style="@style/PicPay.Text.User_Name"
            tools:text="Wiliam Trancoso"/>

    </LinearLayout>

</LinearLayout>