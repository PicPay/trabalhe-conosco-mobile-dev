<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="#F5F5F5"
    android:id="@+id/layoutssclick"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:background="@drawable/radius"
            android:layout_width="14dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:background="#e7e7e7"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginRight="2dp"
                android:layout_weight="0.96">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp">

                    <ImageView
                        android:id="@+id/cartaoimg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/master"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomedocard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Master teste"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/numCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7172 XXXX XXXX XXXXX"
                        />

                    <TextView
                        android:id="@+id/validade"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Validade: 10/18"
                        />

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:background="@drawable/radiusd"
            android:id="@+id/deletarouselecionar"
            android:padding="4dp"
            android:src="@drawable/chevron_right"
            android:layout_width="60dp"
            android:layout_height="match_parent" />



    </LinearLayout>


</LinearLayout>