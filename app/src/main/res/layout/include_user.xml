<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/maximum_space"
    tools:showIn="@layout/activity_payment_method"
    android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/user_image"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/user_image"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/user_image"
            android:layout_marginStart="@dimen/default_space">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="24sp"
                android:maxLines="1"
                android:text="@string/name_default"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/featured_text"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                >

                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_default"
                    android:text="@string/id_default"
                    android:textSize="@dimen/normal_text"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_username"
                    android:layout_toEndOf="@id/txt_id"
                    android:textColor="@color/text_color_default"
                    android:text="@string/username_default"
                    android:textSize="@dimen/normal_text"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/default_space"
                    />
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>