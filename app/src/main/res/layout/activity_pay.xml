<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ghrc.picpay.activity.PayActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        app:srcCompat="@mipmap/ic_launcher"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/material_spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Selecione o CartÃ£o"
        app:met_floatingLabel="normal"
        android:textColorHint="#CFD8DC"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/edt_money_input"
        android:layout_width="match_parent"
        android:layout_alignEnd="@+id/material_spinner1"
        android:layout_alignRight="@+id/material_spinner1"
        android:layout_below="@+id/material_spinner1"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:digits="0123456789"
            android:hint="Valor"
            android:layout_margin="10dp"
            android:inputType="numberDecimal"
            android:maxLength="100"
            android:textSize="17sp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        style="?android:buttonBarButtonStyle"
        android:textColor="@android:color/white"
        android:background="@drawable/riple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_margin="10dp"
        android:id="@+id/btnSendPag"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/edt_money_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/material_spinner1"/>


</RelativeLayout>