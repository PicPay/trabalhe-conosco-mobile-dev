<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/default_space"
        android:id="@+id/rl_back_to_main"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/voltar"
            android:rotation="180"
            android:id="@+id/back_arrow_image"
            android:src="@drawable/ic_down"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voltar"
            android:layout_toEndOf="@+id/back_arrow_image"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_dados"
        android:layout_below="@+id/rl_back_to_main"
        android:layout_marginTop="@dimen/maximum_space"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/user_image"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/user_image"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/user_image"
            android:layout_marginStart="@dimen/default_space">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="24sp"
                android:maxLines="1"
                android:text="@string/name_default"
                android:textColor="@color/text_color_default"
                android:textSize="@dimen/featured_text"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_marginTop="@dimen/default_space"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                >

                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_default"
                    android:text="@string/id_default"
                    android:textSize="@dimen/normal_text"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_username"
                    android:layout_toEndOf="@id/txt_id"
                    android:textColor="@color/text_color_default"
                    android:text="@string/username_default"
                    android:textSize="@dimen/normal_text"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/default_space"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/maximum_space"
        android:layout_below="@+id/rl_dados">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/default_text_to_value"
            android:inputType="numberDecimal"
            android:textSize="48sp"
            android:id="@+id/edit_value"
            app:backgroundTint="@color/dusk_two"
            android:textColor="@color/white_two"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space"
        android:layout_alignParentBottom="true">
        
        <View
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white_two"
            android:layout_height="1dp"/>

        <include layout="@layout/with_credit_card" android:id="@+id/include_method"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include_method"
            android:layout_marginTop="@dimen/double_default_space"
            android:layout_centerHorizontal="true"
            android:text="@string/pay_text"
            android:textSize="@dimen/normal_text"
            android:background="@drawable/btn_corners_gradient"
            android:textColor="@color/dusk_two"/>
    </RelativeLayout>
</RelativeLayout>