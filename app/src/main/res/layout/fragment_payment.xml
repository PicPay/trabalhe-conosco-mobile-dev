<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.PaymentFragment">

    <RelativeLayout
        android:id="@+id/rl_payment_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ic_payment_back"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/action_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="@string/action_back"
            android:layout_toRightOf="@+id/ic_payment_back"
            android:layout_toEndOf="@+id/ic_payment_back" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_payment_voltar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_payment_foto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_payment_foto"
            android:layout_toEndOf="@+id/iv_payment_foto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/tv_payment_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuario"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_payment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="id: 8888"
                android:textSize="14sp"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_payment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/tv_payment_id"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tv_payment_id"
                android:layout_marginStart="10dp"
                android:text="username"
                android:textSize="14sp"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_payment2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_payment_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:layout_marginTop="9dp"
            android:textColor="@color/colorWhiteTwo"
            android:text="@string/currency"/>

        <EditText
            android:id="@+id/et_payment_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhiteTwo"
            android:backgroundTint="@android:color/transparent"
            android:layout_toRightOf="@+id/tv_payment_currency"
            android:text="00.00"
            android:maxLength="7"
            android:inputType="numberDecimal"
            android:layout_toEndOf="@+id/tv_payment_currency"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_payment_2"
        android:layout_width="240dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="-10dp"
        android:background="@color/colorMenuText"
        android:layout_below="@id/rl_payment_3"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp">

        <View
            android:id="@+id/v_payment_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorWhiteTwo"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rl_payment_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_payment_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ic_payment_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_alert"/>

            <RelativeLayout
                android:id="@+id/rl_payment_addCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_payment_alert"
                android:layout_toEndOf="@+id/ic_payment_alert"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_payment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorMediumPink"
                    android:text="@string/without_card"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorMediumPink"
                    android:text="@string/action_register_card"
                    android:layout_below="@+id/tv_payment_1"/>

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_gradient"
            android:textColor="@color/colorDuskTwo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/button_pay"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rl_payment_4"/>

    </RelativeLayout>

</RelativeLayout>