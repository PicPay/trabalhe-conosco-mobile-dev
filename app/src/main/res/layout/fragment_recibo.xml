<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.ReciboFragment">

    <RelativeLayout
        android:id="@+id/rl_recibo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_recibo_foto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_recibo_foto"
            android:layout_toEndOf="@+id/iv_recibo_foto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/tv_recibo_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuario"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_recibo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="id: 8888"
                android:textSize="14sp"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_recibo_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/tv_recibo_id"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tv_recibo_id"
                android:layout_marginStart="10dp"
                android:text="username"
                android:textSize="14sp"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_recibo_1"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv_recibo_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Pagamento"/>

        <RelativeLayout
            android:id="@+id/rl_recibo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_recibo_status"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl_recibo_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_recibo_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="@string/transacao"/>

                <TextView
                    android:id="@+id/tv_recibo_transacao_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDuckEggBlueTwo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@+id/tv_recibo_2"
                    android:text="8888888"
                    android:layout_toEndOf="@+id/tv_recibo_2"
                    android:layout_marginStart="60dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_recibo_1"
                android:layout_width="185dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorWhiteTwo"
                android:layout_below="@+id/rl_recibo_3"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recibo_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_recibo_2"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl_recibo_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_recibo_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="@string/data"/>

                <TextView
                    android:id="@+id/tv_recibo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDuckEggBlueTwo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/tv_recibo_3"
                    android:text="88/88/88 - 88:88"
                    android:layout_toEndOf="@+id/tv_recibo_3"
                    android:layout_marginStart="50dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_recibo_2"
                android:layout_width="185dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorWhiteTwo"
                android:layout_below="@+id/rl_recibo_5"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recibo_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_recibo_4"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl_recibo_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_recibo_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="@string/cartao"/>

                <TextView
                    android:id="@+id/tv_recibo_cartao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDuckEggBlueTwo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_recibo_4"
                    android:text="**** **** **** 1111"
                    android:layout_toEndOf="@+id/tv_recibo_4"
                    android:layout_marginStart="20dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_recibo_3"
                android:layout_width="185dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorWhiteTwo"
                android:layout_below="@+id/rl_recibo_7"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recibo_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_recibo_6"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl_recibo_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_recibo_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="@string/valor"/>

                <TextView
                    android:id="@+id/tv_recibo_valor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDuckEggBlueTwo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="80dp"
                    android:layout_toRightOf="@+id/tv_recibo_5"
                    android:text="R$ 8080,88"
                    android:layout_toEndOf="@+id/tv_recibo_5"
                    android:layout_marginStart="80dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_recibo_4"
                android:layout_width="185dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorWhiteTwo"
                android:layout_below="@+id/rl_recibo_9"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/button_back" />

            <Button
                android:id="@+id/bt_payAgain"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/button_gradient"
                android:textColor="@color/colorDuskTwo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_toRightOf="@+id/bt_back"
                android:text="@string/button_payAgain"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/bt_back" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>