<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/single_space"
    android:background="@drawable/rounded_search_background"
    android:gravity="center">

    <EditText
        android:id="@+id/searchEditText"
        style="@style/SearchViewEditText" />

    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/search_view_padding"
        android:paddingBottom="@dimen/search_view_padding"
        android:layout_marginRight="@dimen/double_space"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        android:visibility="gone"/>

</RelativeLayout>