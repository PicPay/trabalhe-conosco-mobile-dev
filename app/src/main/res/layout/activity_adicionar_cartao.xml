<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AdicionarCartaoActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cardnumber"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/textNomeCartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomecartao"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textValidateCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvvnumber"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@id/textNomeCartao"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="40dp"
            />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="216dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/layoutNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputNumeroCartao"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:hint="@string/hintcardnumber" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layoutNome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputNomeCartao"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:inputType="textCapWords"
                android:layout_height="wrap_content"
                android:hint="@string/hintnomecartao" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layoutValidade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/inputValidadeCartao"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="@string/hintvalidadecartao" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/borda_botao_verde"
                    android:text="@string/anterior"
                    android:textColor="@color/colorPrimary"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:layout_margin="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/botao_redondo_verde"
                    android:text="@string/proximo"
                    android:textColor="@android:color/white"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:enabled="false"
                    android:layout_margin="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>