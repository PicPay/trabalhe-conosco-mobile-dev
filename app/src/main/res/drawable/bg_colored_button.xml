<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimaryDark"/>
            <corners android:radius="@dimen/button_heigth"/>
            <stroke android:width="8dp" android:color="@android:color/transparent"/>
            <padding
                android:bottom="@dimen/space_xxx_small"
                android:left="@dimen/space_xxx_small"
                android:right="@dimen/space_xxx_small"
                android:top="@dimen/space_xxx_small"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="@dimen/button_heigth"/>
            <stroke android:width="8dp" android:color="@android:color/transparent"/>
            <padding
                android:bottom="@dimen/space_xxx_small"
                android:left="@dimen/space_xxx_small"
                android:right="@dimen/space_xxx_small"
                android:top="@dimen/space_xxx_small"/>
        </shape>
    </item>
</selector>