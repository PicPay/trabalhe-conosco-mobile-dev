<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PicPay"/>
    <style name="PicPay.Text"/>
    <style name="PicPay.Image"/>

    <style name="PicPay.Text.User_Username" parent="PicPay.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="PicPay.Text.User_Name" parent="PicPay.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="PicPay.Text.User_Img_Small" parent="PicPay.Image">
        <item name="android:layout_width">@dimen/user_img_size</item>
        <item name="android:layout_height">@dimen/user_img_size</item>
    </style>

    <style name="PicPay.Text.User_Img_Normal" parent="PicPay.Image">
        <item name="android:layout_width">@dimen/user_payment_img_size</item>
        <item name="android:layout_height">@dimen/user_payment_img_size</item>
    </style>
</resources>
