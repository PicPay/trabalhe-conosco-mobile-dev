<resources>

    <style name="PicPayTheme" parent="Theme.AppCompat" >
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchViewEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/search_view_padding</item>
        <item name="android:paddingBottom">@dimen/search_view_padding</item>
        <item name="android:layout_marginStart">@dimen/double_space</item>
        <item name="android:layout_marginEnd">@dimen/quad_space</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/unfocused_element</item>
        <item name="android:hint">@string/searchbar_hint</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/single_space</item>
        <item name="colorControlNormal">@color/unfocused_element</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="UsernameTextView" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NameTextView" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/unfocused_element</item>
    </style>

</resources>
